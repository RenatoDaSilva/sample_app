<% provide(:title, "Entrar") %>
<h1>Entrar</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "Senha" %>
      <%= link_to "(Esqueci minha senha)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Lembre de mim neste computador</span>
      <% end %>

      <%= f.submit "Entrar", class: "btn btn-primary" %>
    <% end %>

    <p>Ã‰ novo por aqui? <%= link_to "Inscreva-se agora!", signup_path %></p>
  </div>
</div>